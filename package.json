{
  "name": "polarity",
  "version": "3.0.1",
  "description": "Detect the polarity (sentiment) of text",
  "license": "MIT",
  "keywords": [
    "natural",
    "language",
    "afinn",
    "sentiment",
    "subjective",
    "subjectivity",
    "polarity",
    "opinion",
    "emotion",
    "attitude"
  ],
  "homepage": "https://words.github.io/polarity/",
  "repository": "words/polarity",
  "bugs": "https://github.com/words/polarity/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js",
    "emoji.json"
  ],
  "dependencies": {
    "afinn-165": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "emoji-emotion": "^2.0.0",
    "esmangle": "^1.0.1",
    "gemoji": "^4.0.0",
    "nyc": "^13.0.0",
    "remark-cli": "^5.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.4.3",
    "xo": "^0.22.0"
  },
  "scripts": {
    "build-md": "remark . -qfo",
    "build-emoji": "node build",
    "build-bundle": "browserify . -s polarity > polarity.js",
    "build-mangle": "browserify . -s polarity -p tinyify > polarity.min.js",
    "build": "npm run build-md && npm run build-emoji && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run build && npm run lint && npm run test-api"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "polarity.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
